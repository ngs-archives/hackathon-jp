<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="sample">
    <Require feature="opensocial-0.8"/>
    <Require feature="views" />
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
 	<script>
		
		var defaultItemList = ['ごはん', 'しお', 'ミソ', '小麦粉'];
		
		gadgets.util.registerOnLoadHandler(init);

		function init() {
		  loadItems();
		}
		
		function onLoadItems(data) {
		  var viewer = data.get('viewer').getData();

		  html = new Array();
		  html.push('<ul>');
		  defaultItemList.each(function(item) {
		  	html.push('<li>' + item + "</li>");
		  });
		  html.push('</ul>');
		  document.getElementById('items').innerHTML = html.join('');
		}
		
		
	</script>
	
	<div id='main'>
	        items:
			<div id='items'></div>
	</div>
    ]]>
  </Content>
</Module>
