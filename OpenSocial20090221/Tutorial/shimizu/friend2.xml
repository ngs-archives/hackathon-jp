    <script type="text/javascript">
      function init() {
        with (opensocial.DataRequest) {
            var req = opensocial.newDataRequest();
            req.add(req.newFetchPersonRequest(PersonId.OWNER), "owner");
            var searchOpt = {};
            searchOpt[PeopleRequestFields.FILTER] = FilterType.ALL;
