  <Content type="html" view="profile"><![CDATA[
<!-- jopensocial -->
<script type="text/javascript" src="http://opensocial02.machu.jp/javascripts/jopensocial/jopensocial.js"></script>
<!-- Fetching People and Friends -->
<div>
	hello
  <button onclick='getParty();'>飲み会情報を取得</button>
  <div>
    <span id='viewer'></span>
		<div id='title'>OpenSocial打ち上げ！</div>
		<dl>
			<dt>開催日時</dt>
			<dd>2009年4月20日 18:00〜20:00</dd>
			<dt>場所</dt>
			<dd>有楽町</dd>
			<dt>定員</dt>
		</dl>
		<div id='description'>OpenSocialハッカソンお疲れ様でした！</div>
		<div id='member'>参加者一覧
			<ul>
				<li>京和</li>
				<li>佐々木</li>
				<li>まちゅ</li>
			</ul>
		</div>
  </div>
</div>
<script type='text/javascript'>
function getParty() {
  $.gadgets.height('auto');
	$.opensocial.person(opensocial.IdSpec.PersonId.OWNER,
	  function(owner) {
		  // console.log(owner.getId());
			$('#viewer').html(owner.getId());
		}
	);
}
</script>

<!-- Posting activity -->
<div>
  <input type='text' id='title' />
  <button onclick='postActivity();'>Post activity</button>
  <div id='result_activity'></div>
</div>
<script type='text/javascript'>
function postActivity() {
  var params = {};
  params[opensocial.Activity.Field.TITLE] = document.getElementById('title').value;
  var activity = opensocial.newActivity(params);
  opensocial.requestCreateActivity(
      activity, opensocial.CreateActivityPriority.HIGH, function(response) {
        if (response.hadError()) {
          document.getElementById('result_activity').innerHTML = response.getErrorCode();
        } else {
          document.getElementById('result_activity').innerHTML = 'Succeeded!';
        }
        gadgets.window.adjustHeight();
      });
}
</script>

  ]]></Content>
  <Content type="html" view="home"><![CDATA[
<!-- jopensocial -->
<script type="text/javascript" src="http://opensocial02.machu.jp/javascripts/jopensocial/jopensocial.js"></script>
<!-- Fetching People and Friends -->
<table>
	<tr>
	 <td>
	  飲み会名
	 </td>
	 <td>
	  <input type="text" id="name"/> 
	 </td>
	</tr>
	<tr>
	 <td>
	  人数
	 </td>
	 <td>
	  <input type="text" id="max"/>  
	 </td>
	</tr>
	<tr>
	 <td>
	  場所
	 </td>
	 <td>
	  <input type="text" id="place"/> 
	 </td>
	</tr>
	<tr>
	 <td>
	  概要
	 </td>
	 <td>
	  <input type="text" id="description"/> 
	 </td>
	</tr>
	<tr>
	 <td>
	  日時
	 </td>
	 <td>
	  <input type="text" id="date"/> 
	 </td>
</table>
<!-- submit -->
<div>
  <button onclick='submit();'>飲み会を企画する</button>
</div>
<script type='text/javascript'>
function submit() {
  var req = opensocial.newDataRequest();
  req.add(req.newFetchPersonRequest(opensocial.IdSpec.PersonId.VIEWER), 'viewer');
  var params = {};
  params[opensocial.IdSpec.Field.USER_ID] = opensocial.IdSpec.PersonId.VIEWER;
  params[opensocial.IdSpec.Field.GROUP_ID] = 'FRIENDS';
  var idSpec = opensocial.newIdSpec(params);
  req.add(req.newFetchPeopleRequest(idSpec), 'friends');
  req.send(function(data) {
  
  
    var viewer = data.get('viewer').getData();
    
    

    
    var name = $("#name").val(); 
    var max = $("#max").val(); 
    var place = $("#place").val(); 
    var description = $("#description").val(); 
    var date = $("#date").val(); 
    var owner_id=viewer.getId();
    var owner_name=viewer.getDisplayName();
    
    var req_url ="http://opensocial.machu.jp/party/create?"+
    "name="+name+"&"+
    "max="+max+"&"+
    "place="+place+"&"+
    "description="+description+"&"+
    "owner_name="+owner_name+"&"+
    "owner_id="+owner_id+"&"+
    "date="+date;
    
    
    
    var params = [];
params[gadgets.io.RequestParameters.CONTENT_TYPE] = gadgets.io.ContentType.JSON;
gadgets.io.makeRequest(req_url, function(response) {
  alert(response.text);
}, params);

    gadgets.window.adjustHeight();
  });
}
</script>

  ]]></Content>
