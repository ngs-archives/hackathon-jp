<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<TextView android:text="@string/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>
	<EditText android:text="" android:id="@+id/title"
		android:layout_width="300px" android:layout_height="wrap_content"></EditText>
	<TextView android:text="@string/content" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>
	<EditText android:text="" android:id="@+id/content"
		android:layout_width="300px" android:layout_height="300px"></EditText>
		
    <LinearLayout 
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	
	>
	<Button android:text="@string/post" android:id="@+id/post"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</LinearLayout>
</LinearLayout>