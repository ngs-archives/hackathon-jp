<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget28"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout android:id="@+id/widget29"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="#ffffffff" android:orientation="vertical">
		<TextView android:id="@+id/widget32" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:padding="10px"
			android:text="バックグラウンド設定" android:textColor="#ff000000">
		</TextView>
	</TableLayout>
	<CheckBox android:id="@+id/widget33" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="バックグラウンドで収集する">
	</CheckBox>
	<TableLayout android:id="@+id/widget34"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="#ffffffff" android:orientation="vertical">
		<TextView android:id="@+id/widget35" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:padding="10px"
			android:text="収集設定" android:textColor="#ff000000">
		</TextView>
	</TableLayout>
	<CheckBox android:id="@+id/widget40" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="位置情報が更新されたら収集する">
	</CheckBox>
	<LinearLayout android:id="@+id/widget42"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<CheckBox android:id="@+id/widget41" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="定期的に収集する">
		</CheckBox>
		<Spinner android:id="@+id/widget43" android:layout_width="40px"
			android:layout_height="30px">
		</Spinner>
		<TextView android:id="@+id/widget44" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:padding="5px"
			android:text="分間隔" android:layout_gravity="center_vertical">
		</TextView>
	</LinearLayout>
</LinearLayout>
