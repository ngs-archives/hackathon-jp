<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<com.google.android.maps.MapView
			android:id="@+id/geoMap" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:apiKey="API KEY" />
		<Button android:id="@+id/btZin" android:text="+"
			android:layout_alignTop="@+id/geoMap" android:layout_height="40px"
			android:layout_width="40px">
		</Button>
		<Button android:id="@+id/btZout" android:text="-"
			android:layout_alignBottom="@+id/geoMap" android:layout_width="40px"
			android:layout_height="40px">
		</Button>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_alignTop="@+id/geoMap" android:layout_alignRight="@+id/geoMap"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:orientation="horizontal">
			<Button android:id="@+id/btMap" android:text="map"
				android:layout_width="50px" android:layout_height="40px">
			</Button>
			<Button android:id="@+id/btSat" android:text="sat"
				android:layout_height="40px" android:layout_width="50px">
			</Button>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
