<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
>
<Spinner android:id="@+id/fromSpinner"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:drawSelectorOnTop="true"
/>
 <Button android:text="Swap"
 	android:id="@+id/swapBtn"
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content"></Button>

<Spinner android:id="@+id/toSpinner"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:drawSelectorOnTop="true"
/>
<EditText android:id="@+id/text"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
/>
<LinearLayout
 android:orientation="horizontal"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
>
 <Button android:text="Voice Input"
 	android:id="@+id/voiceInputBtn"
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content"></Button>

 <Button android:id="@+id/transBtn"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="Translation"
  />
 <Button android:id="@+id/speakBtn"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="Speak"
  />

</LinearLayout>
<EditText android:id="@+id/res"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
/>

<CheckBox android:text="auto"
	android:id="@+id/autoChk"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"></CheckBox>
</LinearLayout>